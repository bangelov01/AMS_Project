@model AuctionFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Number"></label>
                <input asp-for="Number" class="form-control" placeholder="1,2,3 etc...">
                <span asp-validation-for="Number" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Information about auction..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Start"></label>
                <input asp-for="Start" class="form-control" placeholder=@DateTime.Now>
                <span asp-validation-for="Start" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="End"></label>
                <input asp-for="End" class="form-control" placeholder=@DateTime.Now.AddDays(2)>
                <span asp-validation-for="End" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" placeholder="Bulgaria etc..">
                <span asp-validation-for="Country" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" placeholder="Sofia etc...">
                <span asp-validation-for="City" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressText"></label>
                <textarea asp-for="AddressText" rows="4" class="form-control" placeholder="Oborishte Street 12 etc.."></textarea>
                <span asp-validation-for="AddressText" class="small text-danger"></span>
            </div>
            <div class="container text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>         
        </form>
    </div>
</div>
